# Application
APP_NAME=EcoAPI
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database URLs (these will work with Docker)
DATABASE_URL=postgresql://ecouser:ecopass@localhost:5432/ecodb
MONGODB_URL=mongodb://localhost:27017
REDIS_URL=redis://localhost:6379/0

# External APIs (these are public, already configured)
FSA_API_BASE_URL=https://api.ratings.food.gov.uk
OFF_API_BASE_URL=https://world.openfoodfacts.org

# Security (change this!)
SECRET_KEY=your-super-secret-key-change-this-at-least-32-characters-long

# Cache
ENABLE_CACHING=true
CACHE_TTL_ESTABLISHMENT=86400